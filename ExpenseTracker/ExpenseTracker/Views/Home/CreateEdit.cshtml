@{
    ViewData["Title"] = "Create or Edit";
}

@model ExpenseTracker.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit Expense</h1>
    <hr />
</div>
<div class="container mt-4 bg-light rounded-3 py-4">
    <form class="mx-auto w-75" asp-action="CreateEditPost" asp-controller="Home">
        <div class="form-group mt-4">
            <label for="id" class="mb-2">ID</label>
            <input type="number" class="form-control" name="id" placeholder="Enter expense ID" asp-for="Id">
        </div>
        <div class="form-group mt-4">
            <label for="value" class="mb-2">Value</label>
            <input type="number" class="form-control" name="value" placeholder="Enter expense value" step="0.01" asp-for="Value">
        </div>
        <div class="form-group mt-4">
            <label for="description" class="mb-2">Description</label>
            <input type="text" class="form-control" name="description" placeholder="Enter expense description" asp-for="Description">
        </div>

        <button type="submit"  class="btn btn-success mt-5">Save</button>
    </form>
</div>