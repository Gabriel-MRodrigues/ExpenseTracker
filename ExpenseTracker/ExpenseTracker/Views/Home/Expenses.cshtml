@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />
    <table class="table mt-auto">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
                @{
                    foreach(var expense in Model)
                    {
                    <tr class="align-content-center">
                        <td>
                            @expense.Id.ToString()
                        </td>
                        <td>
                            @expense.Value.ToString("C")
                        </td>
                        <td>
                            @expense.Description
                        </td>
                        <td class="mx-auto">
                            <a class="btn btn-primary" asp-action="CreateEdit" asp-route-id="@expense.Id">Edit</a>
                            <a class="btn btn-danger" asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
                        </td>
                    </tr>
                    }
                }
        </tbody>
    </table>
    <a class="btn btn-dark mt-md-5" asp-action="CreateEdit">Create new Expense</a>
</div>
